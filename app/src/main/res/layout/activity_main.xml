<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:hint="Your name"
        android:ems="10"
        android:inputType="text"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="match_parent"
            android:layout_height="118dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/music2" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/allerta"
            android:rotation="-30"
            android:text="Big sales!"
            android:textColor="@color/purple_200"
            android:textSize="30sp"
            android:textStyle="bold"
            android:shadowColor="@color/purple_700"
            android:shadowRadius="3"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv4"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/allerta"
        android:text="Selected item"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:shadowColor="@color/purple_700"
        android:shadowRadius="3"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:minHeight="48dp" />

    <ImageView
        android:id="@+id/goods"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/guitar1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/orderPriceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/allerta"
                android:layout_marginStart="50dp"
                android:text="Order price"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/currentPriceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/allerta"
                android:layout_marginTop="20dp"
                android:text="0 $"
                android:layout_marginStart="90dp"
                android:layout_below="@+id/orderPriceText"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="70dp"
                android:fontFamily="@font/allerta"
                android:text="Quantity"
                android:textSize="16sp" />

            <Button
                android:id="@+id/minusButton"
                android:onClick="decreaseQuantity"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/quantity"
                android:layout_marginTop="10dp"
                android:layout_marginStart="110dp"
                android:layout_toRightOf="@id/currentPriceText"
                android:text="-" />

            <TextView
                android:id="@+id/quantityCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/quantity"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/minusButton"
                android:fontFamily="@font/allerta"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="0"
                android:textSize="16sp" />

            <Button
                android:id="@+id/plusButton"
                android:onClick="increaseQuantity"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/quantity"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/quantityCount"
                android:text="+" />
        </RelativeLayout>

    <Button
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/allerta"
        android:text="Add to chart"
        android:textColor="@color/black" />
</LinearLayout>